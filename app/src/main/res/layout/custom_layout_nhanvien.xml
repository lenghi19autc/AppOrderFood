<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/size70dp"
        android:id="@+id/imgHinhNhanVien"
        android:src="@drawable/nhanvien"
        android:layout_margin="@dimen/size10dp"
        android:layout_height="@dimen/size70dp">
        
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtTenNhanVien"
        android:text="@string/tenmonan"
        android:layout_toRightOf="@+id/imgHinhNhanVien"
        android:layout_marginTop="@dimen/size10dp"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtSoDienThoai"
        android:text="So dien thoai"
        android:layout_toRightOf="@+id/imgHinhNhanVien"
        android:layout_below="@id/txtTenNhanVien"
        android:layout_marginTop="@dimen/size10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    
</RelativeLayout>